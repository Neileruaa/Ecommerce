{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block header %}<h1>Bienvenue sur notre site d'E-commerce</h1>{% endblock %}

{% block body %}
    {{ parent() }}
    <div id="app">
        <label for="name">Name:</label>
        <input id="name" type="text" v-model="name" /> <!--v-model is doing the magic here-->
        <p>${ name }$</p>
    </div>
    {#FIXME: problème de responsive et de colonnes bootstrap#}
    <div class="row">
        <div class="col-sm-3">
            <div class="card" style="width: 18rem; height: 400px">
                <img class="card-img-top img-thumbnail img-fluid" src="/Images/products.jpg" alt="Card image cap" style="height: 150px; ">
                <div class="card-body">
                    <h5 class="card-title">Espace client</h5>
                    <p class="card-text">Consulter nos produits phares et commander le produit de vos rêves !</p>
                    <a href="{{ path('Produit.show') }}" class="btn btn-primary">Accéder</a>
                </div>
            </div>
        </div>
        <div class="col-sm-3">
            <div class="card" style="width: 18rem; height: 400px;">
                <img class="card-img-top img-thumbnail" src="/Images/business.jpg" alt="Image join us" style="height: 150px; ">
                <div class="card-body">
                    <h5 class="card-title">Espace vendeur</h5>
                    <p class="card-text">Ajouter de nouveaux produits, traiter vos commandes, gérer votre business</p>
                    <a href="{{ path('Produit.show') }}" class="btn btn-primary">Accéder</a>
                </div>
            </div>
        </div>
        <div class="col-sm-3">
            <div class="card" style="width: 18rem; height: 400px;">
                <img class="card-img-top img-thumbnail img-fluid" src="/Images/statistics.jpg" alt="Card image cap" style="height: 150px; ">
                <div class="card-body">
                    <h5 class="card-title">Statistiques</h5>
                    <p class="card-text">Nos dernières statistiques en temps réel...</p>
                    <a href="#" class="btn btn-primary">Voir statistiques</a>
                </div>
            </div>
        </div>
        <div class="col-sm-3">
            <div class="card" style="width: 16rem; height: 400px;">
                <img class="card-img-top img-thumbnail" src="/Images/joinUs.jpeg" alt="Image join us" style="height: 150px; ">
                <div class="card-body">
                    <h5 class="card-title">Compte personnel</h5>
                    <p class="card-text">Acceder a votre compte pour profiter pleinement de nos fonctionnalités d'admin ou d'utilisateurs</p>
                    <a href="{{ path('User.edit') }}" class="btn btn-primary">Espace personnel</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
<script>
    const app = new Vue({
    delimiters: ['${', '}$'],
    el: '#app',
    data: {
        name: ''
    }
})</script>
{% endblock %}
